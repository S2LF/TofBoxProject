{% extends 'base.html.twig' %}

{% block title %}Tof'Box{% endblock %}

{% block body %}

<h1 class="title center h3 mb-3 font-weight-normal">Changer son mot de passe</h1>


    <div class="form-wrap">


        {{ form_start(form) }}

        <p>{{ form_row(form.oldPassword) }}</p>

        <p>{{ form_row(form.newPassword.first) }}</p>
    
        <p>{{ form_row(form.newPassword.second) }}
           </p>

        <p class="center">
                <button class="btn">Enregistrer</button>
        </p>
    
    </div>
        {{ form_end(form) }}

{% endblock %}