{% if app.user != user %} 
    <p id="followAjax">
          {% if app.user %}
    {% if isFollow == true %}
        <a class="action unfollow" href="" id="follow" data-user="{{ user.id }}"><i class="fas fa-eye"></i>&nbsp;Suivi</a>
    {% else %}
        <a class="action" href="" id="follow" data-user="{{ user.id }}"><i class="far fa-eye"></i>&nbsp;Suivre</a>
    {% endif %}
    {% else %}
    <a class="action" href="{{ path('app_login') }}"><i class="far fa-eye"></i>&nbsp;Suivre: {{ user.followByUsers | length }}</a>
    {% endif %}
    </p>
{% endif %}

