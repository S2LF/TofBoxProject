
<div class="modal-wrap">

    
    <div class="header-modal">
        <section>
            <div class="profil-modal">
            <a  href="{{ path('profil', {'id':photo.user.id}) }}">
                <img src="{{ asset('img/' ~ photo.user.photoProfil) }}" alt="{{photo.user.nickname}}">
            </a>
        </div>
       
        
        <div>
            <h1>{{ photo.title }}</h1>
            <p>par
            <strong><a  href="{{ path('profil', {'id':photo.user.id}) }}">
                 {{ photo.user.nickname }}
            </a></strong></p>
        </div>
        </section>
        
        <div class="action-modal">
            {% if app.user %}
                <a href="{{ path('add_follow', {'id':app.user.id, 'id_follow':photo.user.id}) }}"><i class="far fa-eye"></i>&nbsp;Follow</a>
