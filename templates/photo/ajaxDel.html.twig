                <a href="{{ path('app_login') }}"><i class="far fa-eye"></i>&nbsp;Follow</a>
            {% endif %}
            <a href=""><i class="fas fa-thumbs-up"></i>&nbsp;Like</a>
        </div>
        
        

    </div>


    <figure>
        <img class="photo_modal" src="{{ asset('img/' ~ photo.path ) }}" alt="{{ photo.title }}">
    </figure>
