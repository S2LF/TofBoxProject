{% extends 'base.html.twig' %}

{% block title %}Tof'Box{% endblock %}

{% block body %}
    <h1 class="center">Inscription</h1>
<div class="form-wrap">


    {{ form_start(registrationForm) }}

    <div class="form_error">
        {{ form_errors(registrationForm) }}
    </div>

    <p>{{ form_row(registrationForm.email) }}</p>

    <p>{{ form_row(registrationForm.nickname) }}</p>

    <p>{{ form_row(registrationForm.plainPassword.first) }}</p>

    <p>{{ form_row(registrationForm.plainPassword.second) }}</p>

    <p>{{ form_errors(registrationForm.agreeTerms) }}{{ form_widget(registrationForm.agreeTerms) }} <label for="registration_form_agreeTerms">&nbsp;&nbsp;En cochant cette case, je déclare avoir lu et accepter les <a class="blue" href="{{ path('app_terms') }}">Conditions d’utilisation</a> et la <a class="blue" href="{{ path('app_policy') }}">Politique de confidentialité</a>.</label>
    </p>
{# 
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.nickname) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}
